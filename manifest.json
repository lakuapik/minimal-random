{
    "manifest_version": 2,
    "name": "Minimal Random",
    "short_name": "minimal-random",
    "description": "Add 'random essay' floating button on theminimalists.com.",
    "author": "github.com/lakuapik",

    "version": "1.0",

    "icons": {
        "48": "icons/48.png",
        "64": "icons/64.png",
        "96": "icons/96.png",
        "128": "icons/128.png"
    },

    "content_scripts": [{
        "matches": ["*://*.theminimalists.com/*"],
        "js": ["minimalrandom.js"]
    }],

    "applications": {
        "gecko": {
            "id": "minimalrandom@lakuapik"
        }
    }
}